{
    "name": "pixura-relayer",
    "version": "0.0.1",
    "description": "Pixura 0x relayer",
    "repository": "git@github.com:Pixura/relayer.git",
    "author": "Charles Crain <charles@pixura.io>",
    "license": "Apache-2.0",
    "scripts": {
        "prettier": "yarn prettier:js && yarn prettier:ts",
        "build": "yarn build:ts && shx rm -rf js && shx cp -r ts/lib/ js",
        "prettier:js": "prettier --write 'js/**/*.js' --config .prettierrc",
        "start:js": "node -r dotenv/config js/lib/index.js",
        "build:ts": "tsc -p ts/tsconfig.json",
        "build:purs": "mkdir -p ./ts/src/purs && pulp build --src-path ./purs/src/ -o ./ts/src/purs/",
        "build:generate-types": "mkdir -p ./ts/src/purs && pulp run --src-path ./purs/src -m Generate",
        "watch:ts": "tsc -w -p ts/tsconfig.json",
        "prettier:ts": "prettier --write 'ts/**/*.ts' --config .prettierrc",
        "start:ts": "node -r dotenv/config ts/lib/index.js",
        "lint:ts": "tslint --project ts --format stylish"
    },
    "devDependencies": {
        "@0x/tslint-config": "^3.0.0",
        "@types/cors": "^2.8.4",
        "@types/dotenv": "^6.1.0",
        "@types/express": "^4.16.0",
        "@types/lodash": "^4.14.116",
        "@types/web3-provider-engine": "^14.0.0",
        "dotenv": "^6.2.0",
        "prettier": "^1.14.3",
        "prettier-tslint": "^0.4.2",
        "shx": "^0.3.2",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    },
    "dependencies": {
        "0x.js": "^4.0.1",
        "@0x/contract-addresses": "^2.2.1",
        "@0x/assert": "^2.0.1",
        "@0x/connect": "^4.0.1",
        "@0x/json-schemas": "^3.0.1",
        "@0x/order-watcher": "^3.0.1",
        "@0x/subproviders": "^3.0.1",
        "@0x/types": "^2.0.1",
        "@0x/typescript-typings": "^4.0.0",
        "@0x/utils": "^4.0.2",
        "@0x/web3-wrapper": "^4.0.1",
        "@babel/polyfill": "^7.0.0",
        "body-parser": "^1.18.3",
        "bower": "^1.8.8",
        "cors": "^2.8.5",
        "express": "^4.16.3",
        "express-async-handler": "^1.1.4",
        "forever": "^0.15.3",
        "http-status-codes": "^1.3.0",
        "jsonschema": "^1.2.4",
        "lodash": "^4.17.11",
        "pg": "^7.8.0",
        "pulp": "^12.3.1",
        "reflect-metadata": "^0.1.10",
        "sqlite3": "^4.0.2",
        "typeorm": "0.2.7"
    }
}
